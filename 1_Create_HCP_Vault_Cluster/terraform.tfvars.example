# AWS Configuration
aws_region        = "us-east-1"
availability_zone = "us-east-1a"

# Project Settings
project_name = "cert-automation"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# Security - IMPORTANT: Replace 0.0.0.0/0 with your specific IP address for production
# Example: ["203.0.113.0/32"] for a single IP or ["203.0.113.0/24"] for a subnet
allowed_cidr_blocks = ["0.0.0.0/0"]

# SSH Key - Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/aws_key
# Then paste the content of ~/.ssh/aws_key.pub here
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"

# Instance Types
windows_instance_type = "t3.medium"  # 2 vCPU, 4 GB RAM
ubuntu_instance_type  = "t3.small"   # 2 vCPU, 2 GB RAM

# Disk Sizes (GB)
windows_disk_size = 50
ubuntu_disk_size  = 20
